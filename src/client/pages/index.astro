---
import MainLayout from '@/layouts/MainLayout.astro'
import Input from '@/components/Input.astro'
import Button from '@/components/Button.astro'
---

<MainLayout title="Clicker Game">
  <main class="py-6 px-2 flex flex-grow justify-center">
    <section
      class="bg-zinc-100 dark:bg-zinc-900 rounded-lg px-6 py-8 ring-1 ring-slate-900/5 shadow-xl h-fit"
      data-id="form-container"
    >
      <form data-id="form-user-data" class="flex gap-2 items-end">
        <label class="flex flex-col gap-0.5 cursor-pointer">
          <span class="text-zinc-600 dark:text-zinc-400 text-sm font-semibold">
            Player name
          </span>
          <Input name="name" type="text" autocomplete="off" />
        </label>

        <Button type="submit"> Play! </Button>
      </form>
      <div data-id="lobby-message" class="text-zinc-400 mt-4"></div>
    </section>

    <section
      class="bg-zinc-100 dark:bg-zinc-900 rounded-lg px-6 py-8 ring-1 ring-slate-900/5 shadow-xl h-fit w-full max-w-lg hidden"
      data-id="game-container"
    >
      <header>
        <h2 data-id="game-header-text" class="text-center font-semibold"></h2>
      </header>
      <div data-id="game-message" class="text-zinc-400 mt-4"></div>
    </section>
  </main>

  <div class="flex justify-between items-end p-4">
    <div data-id="footer-message" class="font-semibold text-zinc-400"></div>
  </div>

  <div
    data-id="temporal-message"
    class="font-semibold p-3 w-fit max-w-80
      absolute bottom-4 right-4
      bg-zinc-900 rounded-md transition opacity-0"
  >
  </div>
</MainLayout>

<script src="../scripts/games/clicker/index"></script>

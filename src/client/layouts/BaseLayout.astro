---
import '@fontsource-variable/inter'

interface Props {
  title: string
  favicon?: string
}

const { title, favicon = '/favicon.svg' } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <link rel="icon" type="image/x-icon" href={favicon} />

    <meta
      name="description"
      content="This web has many interesting things development using basic web concepts and eventualy it is going to scale using more advances concepts"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta property="og:type" content="website" />
    <meta
      property="og:title"
      content="Simple game developed using websocket technology"
    />
    <meta
      property="og:description"
      content="Simple game developed using websocket technology"
    />
  </head>

  <body class="bg-zinc-950 text-zinc-300 overflow-y-hidden overflow-x-hidden">
    <div class="w-dvw h-dvh overflow-y-auto overflow-x-hidden flex flex-col">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  * {
    scrollbar-width: thin;
    font-family:
      'Inter Variable',
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      'Segoe UI',
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      'Open Sans',
      'Helvetica Neue',
      sans-serif;
  }
</style>
